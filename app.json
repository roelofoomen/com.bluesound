{
	"id": "com.bluesound",
	"sdk": 2,
  "brandColor": "#000000",
	"name": {
		"en": "Bluesound",
		"nl": "Bluesound"
	},
	"tags": {
		"en": [ "bluesound", "music" ],
		"nl": [ "bluesound", "muziek" ]
	},
	"version": "1.3.6",
	"compatibility": ">=3.0.0",
	"author": {
		"name": "Jelger Haanstra",
		"email": "homey@solidewebservices.com",
		"website": "https://github.com/jghaanstra/com.bluesound"
	},
	"contributing": {
		"donate": {
			"paypal": {
				"username": "jghaanstra"
			}
		}
	},
	"bugs": {
		"url": "https://github.com/jghaanstra/com.bluesound/issues"
	},
  "homeyCommunityTopicId": 121,
  "source": "https://github.com/jghaanstra/com.bluesound",
  "homepage": "https://community.athom.com/t/121",
	"images": {
		"large": "./assets/images/large.png",
		"small": "./assets/images/small.png"
	},
	"category": "music",
	"description": {
		"en": "Control your Bluesound devices with Homey",
		"nl": "Bedien je Bluesound apparaten via Homey"
	},
	"dependencies": {
		"net": "*"
	},
	"drivers": [
		{
			"id": "bluesound",
			"name": {
				"en": "Bluesound",
				"nl": "Bluesound"
			},
			"images": {
				"large": "drivers/bluesound/assets/images/large.jpg",
				"small": "drivers/bluesound/assets/images/small.jpg"
			},
			"class": "speaker",
			"capabilities": [
        "speaker_playing",
				"speaker_prev",
				"speaker_next",
				"volume_set",
				"volume_mute"
			],
			"pair": [
				{
					"id": "start"
				}
			],
			"settings": [
				{
					"type": "group",
					"label": {
						"en": "Bluesound settings",
						"nl": "Bluesound instellingen"
					},
					"children": [
						{
							"id": "address",
							"type": "text",
							"value": "0.0.0.0",
							"label": {
								"en": "IP Address",
								"nl": "IP adres"
							}
						},
						{
							"id": "port",
							"type": "number",
							"value": 11000,
							"step": 1,
							"label": {
								"en": "Port",
								"nl": "Poort"
							}
						},
						{
							"id": "polling",
							"type": "number",
							"value": 4,
							"step": 1,
							"attr": {
								"min": 4,
								"max": 3600
							},
							"label": {
								"en": "Polling",
								"nl": "Polling"
							}
						}
					]
				}
			]
		}
	],
  "flow": {
    "triggers": [
      {
			  "id": "start_playing",
			  "title": {
          "en": "Start Playing",
          "nl": "Start afspelen"
			  },
        "tokens": [
          {
            "name": "album",
            "type": "string",
            "title": {
              "en": "Album",
              "nl": "Album"
            },
            "example": "Dirt"
          },
          {
            "name": "track",
            "type": "string",
            "title": {
                "en": "Track",
                "nl": "Track"
            },
            "example": "Would?"
          },
          {
            "name": "artist",
            "type": "string",
            "title": {
              "en": "Artist",
              "nl": "Artist"
            },
            "example": "Alice in Chains"
          }
        ],
	      "args": [
          {
		        "name": "device",
		        "type": "device",
		        "placeholder": {
			        "en": "Select Bluesound device",
			        "nl": "Selecteer Bluesound apparaat"
		        },
		        "filter": "driver_id=bluesound"
	        }
				]
			},
      {
				"id": "stop_playing",
				"title": {
          "en": "Stop Playing",
          "nl": "Stop afspelen"
				},
				"args": [
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "artist_changed",
				"title": {
          "en": "Artist changed",
          "nl": "Artiest gewijzigd"
				},
        "tokens": [
          {
            "name": "album",
            "type": "string",
            "title": {
              "en": "Album",
              "nl": "Album"
            },
            "example": "Dirt"
          },
          {
            "name": "track",
            "type": "string",
            "title": {
              "en": "Track",
              "nl": "Track"
            },
            "example": "Would?"
          },
          {
            "name": "artist",
            "type": "string",
            "title": {
              "en": "Artist",
              "nl": "Artist"
            },
            "example": "Alice in Chains"
          }
        ],
				"args": [
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "track_changed",
				"title": {
          "en": "Track changed",
          "nl": "Track gewijzigd"
				},
        "tokens": [
          {
            "name": "album",
            "type": "string",
            "title": {
              "en": "Album",
              "nl": "Album"
            },
            "example": "Dirt"
          },
          {
            "name": "track",
            "type": "string",
            "title": {
              "en": "Track",
              "nl": "Track"
            },
            "example": "Would?"
          },
          {
            "name": "artist",
            "type": "string",
            "title": {
              "en": "Artist",
              "nl": "Artist"
            },
            "example": "Alice in Chains"
          }
        ],
				"args": [
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			}
    ],
    "conditions": [
      {
				"id": "playing",
				"title": {
          "en": "!{{is|is not}} playing",
          "nl": "!{{is|is niet}} aan het afspelen"
				},
				"args": [
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "shuffled",
				"title": {
          "en": "!{{is|is not}} shuffled",
          "nl": "!{{is|is niet}} shuffled"
				},
				"args": [
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			}
    ],
    "actions": [
			{
				"id": "repeat",
				"title": {
          "en": "Repeat",
          "nl": "Herhaal"
				},
        "args": [
          {
            "type": "dropdown",
            "name": "repeat",
            "values": [
              {
                "id": "0",
                "label": {
                  "en": "On",
                  "nl": "Aan"
                }
              },
              {
                "id": "1",
                "label": {
                  "en": "Track",
                  "nl": "Track"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              }
            ]
          },
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "shuffle",
				"title": {
          "en": "Shuffle",
          "nl": "Shuffle"
				},
        "args": [
          {
            "type": "dropdown",
            "name": "shuffle",
            "values": [
              {
                "id": "0",
                "label": {
                  "en": "Off",
                  "nl": "Uit"
                }
              },
              {
                "id": "1",
                "label": {
                  "en": "On",
                  "nl": "Aan"
                }
              }
            ]
          },
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "changeinput",
				"title": {
          "en": "Change input",
          "nl": "Verander input"
				},
        "args": [
          {
            "type": "autocomplete",
            "name": "inputs",
            "placeholder": {
              "en": "Select input",
              "nl": "Selecteer input"
            }
          },
          {
	          "name": "device",
	          "type": "device",
	          "placeholder": {
	            "en": "Select Bluesound device",
		          "nl": "Selecteer Bluesound apparaat"
				    },
				    "filter": "driver_id=bluesound"
			    }
			  ]
			},
      {
				"id": "changeservice",
				"title": {
          "en": "Change service",
          "nl": "Verander service"
				},
        "args": [
          {
            "type": "autocomplete",
            "name": "services",
            "placeholder": {
              "en": "Select service",
              "nl": "Selecteer service"
            }
          },
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "playpreset",
				"title": {
          "en": "Play Preset",
          "nl": "Speel preset"
				},
        "args": [
          {
            "type": "number",
            "name": "preset",
            "min": 1,
            "max": 100,
            "step": 1,
            "placeholder": {
              "en": "Select preset",
              "nl": "Selecteer preset"
            }
          },
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "addslave",
				"title": {
          "en": "Add slave",
          "nl": "Toevoegen slave"
				},
        "args": [
          {
            "type": "text",
            "name": "ip",
            "placeholder": {
              "en": "Slave IP",
              "nl": "Slave IP"
            }
          },
          {
            "type": "text",
            "name": "group",
            "placeholder": {
              "en": "Group Name",
              "nl": "Groepsnaam"
            }
          },
          {
			      "name": "device",
		        "type": "device",
		        "placeholder": {
			        "en": "Select Bluesound device",
			        "nl": "Selecteer Bluesound apparaat"
		        },
					  "filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "removeslave",
				"title": {
          "en": "Remove slave",
          "nl": "Verwijderen slave"
				},
        "args": [
          {
            "type": "text",
            "name": "ip",
            "placeholder": {
              "en": "Slave IP",
              "nl": "Slave IP"
            }
          },
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "switchinput",
				"title": {
          "en": "Switch input",
          "nl": "Schakel input"
				},
        "hint": {
					"en": "Use this card to switch to the next or previous input",
					"nl": "Gebruik deze card om naar de vorige of volgende input te gaan"
				},
        "args": [
          {
            "type": "dropdown",
            "name": "direction",
            "values": [
              {
                "id": "previous",
                "label": {
                  "en": "Previous",
                  "nl": "Vorige"
                }
              },
              {
                "id": "next",
                "label": {
                  "en": "Next",
                  "nl": "Volgende"
                }
              }
            ]
          },
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "setRelativeVolume",
				"title": {
          "en": "Set Relative Volume",
          "nl": "Relatief volume instellen"
				},
        "args": [
          {
            "type": "range",
            "name": "volume",
            "min": -1,
            "max": 1,
            "step": 0.1,
            "label": "%",
            "labelMultiplier": 100,
            "labelDecimals": 0
          },
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			},
      {
				"id": "sendcommand",
				"title": {
          "en": "Send Command",
          "nl": "Verstuur commando"
				},
        "hint": {
					"en": "Use this card to send any custom command to to your Bluesound device, for instance Genres?service=LocalMusic",
					"nl": "Gebruik deze card om elk aangepast commando naar je Bluesound apparaat te versturen, b.v. Genres?service=LocalMusic"
				},
        "args": [
          {
            "type": "text",
            "name": "command",
            "placeholder": {
              "en": "Command",
              "nl": "Commando"
            }
          },
          {
						"name": "device",
						"type": "device",
						"placeholder": {
							"en": "Select Bluesound device",
							"nl": "Selecteer Bluesound apparaat"
						},
						"filter": "driver_id=bluesound"
					}
				]
			}
    ]
  }
}
